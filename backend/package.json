{
  "name": "psu-agro-food-backend",
  "version": "1.0.0",
  "description": "PSU AGRO FOOD CO., LTD. - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "init-db": "node init-db.js",
    "start:win": "set NODE_ENV=production && node server.js",
    "postinstall": "node -e \"const fs=require('fs'); if(!fs.existsSync('./database.sqlite')){require('child_process').execSync('node init-db.js',{stdio:'inherit'})}\" || true"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sql.js": "^1.14.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
